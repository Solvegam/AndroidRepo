<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/project_list_layout_horizontal"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:name="com.solvegam.teamphotodairy.fragments.ProjectList"
        tools:layout="@layout/project_list">
    </fragment>

    <fragment
        android:id="@+id/project_content_layout_horizontal"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:name="com.solvegam.teamphotodairy.fragments.ProjectContent"
        tools:layout="@layout/project_content">
    </fragment>

</LinearLayout>